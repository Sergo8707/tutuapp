<%= form_for(user) do |f| %>
    <%= render 'common/errors', resource: user %>

    <div class="field">
      <%= f.label :name, 'Имя' %>
      <%= f.text_field :name %>
    </div>

    <div class="actions">
      <%= f.submit "#{ user.new_record? ? 'Создать' : 'Изменить' }", class: 'btn btn-success' %>
    </div>
<% end %>