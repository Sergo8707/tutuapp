<p id="notice"><%= notice %></p>

<p>
  <strong>Номер:</strong>
  <%= @train.number %>
</p>
<p>
  <strong>На маршруте:</strong>
  <% if @train.route.present? %>
      <%= @train.route.name %>
  <% else %>
      Не указано
  <% end %>
</p>
<br>
<strong>Сортировка вагонов с <%= @train.carriage_order ? 'головы' : 'хвоста' %></strong>
<br>
<div class="row">
  <div class="col-md-8">
    <p>
      <% if @train.carriages.empty? %>
          У поезда нет вагонов
      <% else %>
          <%= render 'carriages' %>
      <% end %>
    </p>
  </div>
</div>
<%= link_to 'Новый вагон', new_train_carriages_path(@train), class: 'btn btn-success' %>|
<%= link_to 'Изменить', edit_train_path(@train), class: 'btn btn-warning' %> |
<%= link_to 'Назад', trains_path, class: 'btn-sm btn-default' %>
