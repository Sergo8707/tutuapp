<%= form_for(@railway_station) do |f| %>
    <%= render 'common/errors', resource: @railway_station %>

    <div class="field text_input">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="actions">
      <%= f.submit "#{ @railway_station.new_record? ? 'Создать' : 'Изменить' }", class: 'btn btn-success' %>
    </div>
<% end %>
