<%= form_for [:admin, route] do |f| %>
    <%= render 'common/errors', resource: route %>

    <div class="field text_input">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field text_input">
      <%= f.label :railway_station %>
      <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :name, {}, {multiple: true} %>
    </div>

    <div class="actions">
      <%= f.submit "#{ route.new_record? ? t('common.create_button') : t('common.update_button') }", class: 'btn btn-success' %>
    </div>
<% end %>
