<%= form_for [:admin, train] do |f| %>
    <%= render 'common/errors', resource: @train %>

    <div class="field text_input">
      <%= f.label :number %>
      <%= f.text_field :number %>
    </div>

    <div class="field text_input">
      <%= f.label :route, 'Текущий маршрут' %>
      <%= f.collection_select :route_id, Route.all, :id, :name %>
    </div>

    <div class="field">
      <%= f.label :carriage_order, 'Прямой порядок сортировки' %>
      <%= f.check_box :carriage_order %>
    </div>

    <div class="actions">
      <%= f.submit "#{ @train.new_record? ? 'Создать' : 'Изменить' }", class: 'btn btn-success' %>
    </div>
<% end %>
