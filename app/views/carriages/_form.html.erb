<%= form_for(carriage) do |f| %>
    <%= render 'common/errors', resource: carriage %>

    <div class="field text_input">
      <%= f.label :train, 'Поезд' %>
      <%= f.collection_select :train_id, Train.all, :id, :number %>
    </div>

    <% if carriage.new_record? %>
        <div class="field text_input">
          <%= f.label :type, 'Тип вагона' %>
          <%= f.select :type, Carriage::TYPES %>
        </div>
    <% end %>

    <% if carriage.has_seats?(:top_seats) %>
        <div class="field text_input">
          <%= f.label :top_seats, 'Верхних мест' %>
          <%= f.text_field :top_seats %>
        </div>
    <% end %>

    <% if carriage.has_seats?(:bottom_seats) %>
        <div class="field text_input">
          <%= f.label :bottom_seats, 'Нижних мест' %>
          <%= f.text_field :bottom_seats %>
        </div>
    <% end %>

    <% if carriage.has_seats?(:side_top_seats) %>
        <div class="field text_input">
          <%= f.label :side_top_seats, 'Боковых верхних мест' %>
          <%= f.text_field :side_top_seats %>
        </div>
    <% end %>

    <% if carriage.has_seats?(:side_bottom_seats) %>
        <div class="field text_input">
          <%= f.label :side_bottom_seats, 'Боковых нижних мест' %>
          <%= f.text_field :side_bottom_seats %>
        </div>
    <% end %>

    <% if carriage.has_seats?(:seats) %>
        <div class="field text_input">
          <%= f.label :seats, 'Сидячих мест' %>
          <%= f.text_field :seats %>
        </div>
    <% end %>

    <div class="actions">
      <%= f.submit "#{ carriage.new_record? ? 'Создать' : 'Изменить' }", class: 'btn btn-success' %>
    </div>

<% end %>