<%= form_for (@carriage) do |f| %>
    <%= render 'common/errors', resource: @carriage %>

    <div class="field text_input">
      <%= f.label :train, 'Выберите поезд:' %>
      <%= f.collection_select :train_id, Train.all, :id, :number %>
    </div>

    <div class="field text_input">
      <%= f.label :number, 'Номер вагона:' %>
      <%= f.text_field :number %>
    </div>

    <div class="field text_input">
      <%= f.label :carriage_type, 'Тип вагона:' %>
      <%= f.select :carriage_type, Carriage::TYPES %>
    </div>

    <div class="field text_input">
      <%= f.label :top_place, 'Количество нижних полок:' %>
      <%= f.text_field :top_places %>
    </div>

    <div class="field text_input">
      <%= f.label :bottom_place, 'Количество верхних полок:' %>
      <%= f.text_field :bottom_places %>
    </div>

    <div class="actions">
      <%= f.submit "#{ @carriage.new_record? ? 'Создать' : 'Изменить' }", class: 'btn btn-success' %>
    </div>
<% end %>