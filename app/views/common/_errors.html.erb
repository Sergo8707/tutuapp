<div class="row">
  <div class="container">
    <div class="col-md-6">
      <% if resource.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h2><%= t('common.errors') %></h2>
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                  <li class="text_input"><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
    </div>
  </div>
</div>

