<%= form_for(@route) do |f| %>
    <%= render 'common/errors', resource: @route %>
    <div class="field text_input">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field text_input">
      <%= f.label :railway_station_ids, "Текущая станция" %>
      <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {}, {multiple: true} %>
    </div>

    <div class="actions">
      <%= f.submit "#{ @route.new_record? ? 'Создать' : 'Изменить' }", class: 'btn btn-success' %>
    </div>
<% end %>
